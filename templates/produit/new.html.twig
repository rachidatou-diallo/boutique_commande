{% extends 'base.html.twig' %}

{% block title %}Nouveau produit - {{ parent() }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-plus-circle me-2"></i>Nouveau produit</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.categorie) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.prix) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.stock) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Créer le produit
                        </button>
                        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Annuler</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>Aide</h6>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <strong>Nom :</strong> Donnez un nom clair et descriptif à votre produit.
                </p>
                <p class="card-text">
                    <strong>Catégorie :</strong> Sélectionnez la catégorie appropriée pour organiser vos produits.
                </p>
                <p class="card-text">
                    <strong>Prix :</strong> Indiquez le prix de vente du produit.
                </p>
                <p class="card-text">
                    <strong>Stock :</strong> Quantité disponible en stock.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}